{
    "variables" : {
        "api_token" : "{{env `DO_API_TOKEN`}}"
    },
    "builders" : [{
        "type" : "digitalocean",
        "api_token" : "{{user `api_token`}}",
        "region" : "sgp1",
        "size" : "1gb",
        "image": "centos-6-5-x64",
        "snapshot_name" : "wildfly-centos-{{ timestamp }}"
    }],

    "provisioners" : [
        {
            "type" : "shell",
            "script" : "install_java.sh"
        },
        {
            "type" : "shell",
            "script" : "install_jboss.sh"
        }
    ]


}
